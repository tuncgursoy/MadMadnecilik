@{
    Layout = "~/Areas/MENU/Views/Shared/_Layout.cshtml";
}
@model Web.Areas.MENU.Models.ModelUser
<section class="ftco-section contact-section px-md-4">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h3" align="center">Duyuru Ekle</h2>
            </div>
            <div class="w-100"></div>

        </div>
        <div class="row block-9">
            <div class="col-lg-12 d-flex">
                <form asp-controller="DuyuruEk" asp-action="Index" class="bg-light p-5 contact-form" method="post" enctype="multipart/form-data">
                    
                    <div class="form-group">
                        @Html.TextBoxFor(model => Model.baslik, new { @class = "form-control", @type = "text", @placeholder = "Başlık" })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.icerik, 20, 30, new { @class = "form-control", @placeholder = "İçerik" })

                    </div>
                    <div class="form-group">
                        <label>PDF ekle:  </label>
                        <input onchange="resimDegisti(this)"
                               accept="application/pdf"
                               id="btnImageFile" type="file" asp-for="dosyaUrl" value="Dosya Ekle"/>
                    </div>
                    <div class="form-group">
                        <label>Resim ekle:  </label>
                        <input onchange="resimDegisti(this)"
                               accept="image/x-png,image/gif,image/jpeg"
                               id="btnImageFile1" type="file" asp-for="resimUrl" value="Resim Ekle"/>
                    </div>

                    <div class="form-group">
                        <input type="submit" align="center" value="Paylaş" class="btn btn-primary py-3 px-5">
                        @if (Model != null)
                        {


                            @if (Model.isSuccessfull != null && Model.isSuccessfull == true)
                            {

                                <div class="alert" align="center">
                                    Ekleme Başarılı
                                </div>
                            }
                            else if (Model.isSuccessfull != null && Model.isSuccessfull == false)
                            {
                                <div class="alert" align="center">
                                    Ekleme Başarısız 
                                </div>
                            }
                        }
                    </div>
                    
                </form>

            </div>

        </div>
    </div>
</section>



