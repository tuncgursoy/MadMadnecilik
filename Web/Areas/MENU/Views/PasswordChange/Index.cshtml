
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/MENU/Views/Shared/_Layout.cshtml";
}
    <script>

        function submit() {
            if (document.getElementsByName("password1") == "" || document.getElementsByName("password2") == "" || document.getElementsByName("password1") != documen
                .getElementByName("password2")) {
                alert("Şifre Giriş Alanında Bir Yanlışlık Var");
                windows.history.back();
            } else {
                alert("Başarıyla Kayıt Edildi");
            }
            return false;
        }

    </script>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
