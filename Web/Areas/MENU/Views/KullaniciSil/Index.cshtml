
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/MENU/Views/Shared/_Layout.cshtml";
}


@model Web.Areas.MENU.Models.ModelUser
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Menu/DeleteUser/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Menu/DeleteUser/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                <form asp-action="Index" asp-controller="KullaniciSil" class="login100-form validate-form">
                    <span class="login100-form-title p-b-33">
                        Kullanıcıyı DeAktivite/Aktivite Arayüzü
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Kişinin emailinin Giriniz">
                        @Html.TextBoxFor(model=>model.kull.mail,new{@class="input100", @type="text", @name = "email", @placeholder = "Email"})
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>

                    <div class="wrap-input100 rs1 validate-input" data-validate="DeAktivite Edilecek Kişinin Adını Giriniz">
                        @Html.TextBoxFor(model=>model.icerik,new{@class="input100", @type="text", @name = "pass", @placeholder = "Kişinin Adı" })
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-20">
                        <button class="login100-form-btn" type="submit">
                            Deaktivite/Aktif et
                        </button>
                       
                    </div>
                    @if (Model != null)
                    {
                        @if (Model.isSuccessfull != null && Model.isSuccessfull == true)
                        {

                            <div class="alert" align="center">
                                Başarılı
                            </div>
                        }
                        else if (Model.isSuccessfull != null && Model.isSuccessfull == false)
                        {
                            <div class="alert" align="center">
                                Başarısız
                            </div>
                        }
                    }
                </form>
            </div>
        </div>
    </div>



    <!--===============================================================================================-->
    <script src="~/Menu/DeleteUser/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Menu/DeleteUser/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Menu/DeleteUser/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Menu/DeleteUser/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Menu/DeleteUser/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Menu/DeleteUser/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Menu/DeleteUser/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Menu/DeleteUser/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Menu/DeleteUser/js/main.js"></script>

</body>
